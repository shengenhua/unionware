<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/c_scan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/tv_scan_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_15"
                    android:gravity="center|start"
                    android:text="扫描条码"
                    android:textColor="#515151"
                    android:textSize="@dimen/sp_18"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_scan_input"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@null"
                    android:text=""
                    android:focusableInTouchMode="true"
                    android:nextFocusDown="@id/et_scan_input"
                    android:paddingVertical="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:singleLine="true"
                    android:hint="请扫描条码"
                    android:textSize="@dimen/sp_18"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_scan_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#DCDCDC"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/et_scan_input"
                    app:layout_constraintStart_toStartOf="@+id/et_scan_input" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintTop_toBottomOf="@+id/c_scan"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/tv_template_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_15"
                    android:gravity="center|start"
                    android:text="条码模版"
                    android:textColor="#515151"
                    android:textSize="@dimen/sp_18"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_template_input"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@null"
                    android:text=""
                    android:focusableInTouchMode="true"
                    android:nextFocusDown="@id/et_template_input"
                    android:paddingVertical="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:singleLine="true"
                    android:hint="请选择条码模版"
                    android:textSize="@dimen/sp_18"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_template_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView
                    android:id="@+id/iv_base_info_query"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/dp_5"
                    android:src="@drawable/ic_query"
                    app:layout_constraintBottom_toBottomOf="@+id/et_template_input"
                    app:layout_constraintEnd_toEndOf="@+id/et_template_input"
                    app:layout_constraintTop_toTopOf="@+id/et_template_input" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#DCDCDC"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/et_template_input"
                    app:layout_constraintStart_toStartOf="@+id/et_template_input" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/tv_print_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>