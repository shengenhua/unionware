<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/dp_20"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_height="wrap_content">

    <unionware.base.ui.ClearAppEditView
        android:id="@+id/etInspectInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_search"
        android:hint="请扫描条码"
        android:paddingStart="@dimen/dp_50"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="?attr/font16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivCommonScan"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="0dp"
        android:src="@drawable/dr_qr_code_scan"
        app:layout_constraintBottom_toBottomOf="@+id/etInspectInput"
        app:layout_constraintStart_toStartOf="@+id/etInspectInput"
        app:layout_constraintTop_toTopOf="@id/etInspectInput" />

</androidx.constraintlayout.widget.ConstraintLayout>