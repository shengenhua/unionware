<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/ic_wms_toolbar"
            layout="@layout/item_common_toolbar"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/btn_wms_scan_confirm"
            app:layout_constraintTop_toBottomOf="@+id/ic_wms_toolbar" />



        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/fam_float_stable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_addButtonColorNormal="?attr/colorPrimary"
            app:fab_addButtonColorPressed="@color/c_33c3ff"
            android:layout_marginBottom="@dimen/dp_5"
            app:fab_addButtonSize="mini"
            app:fab_expandDirection="up"
            app:fab_labelsPosition="left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_wms_scan_confirm"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_default_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_colorNormal="?attr/colorPrimary"
                app:fab_colorPressed="@color/c_33c3ff"
                app:fab_icon="@drawable/ic_default_value"
                app:fab_size="mini"
                app:fab_title="默认值" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_nullify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_colorNormal="?attr/colorPrimary"
                app:fab_colorPressed="@color/c_33c3ff"
                app:fab_icon="@drawable/ic_nullify"
                app:fab_size="mini"
                app:fab_title="作废" />

        </com.getbase.floatingactionbutton.FloatingActionsMenu>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:tag="条码明细"
            android:text="条码明细"
            app:fab_colorNormal="?attr/colorPrimary"
            app:fab_colorPressed="@color/c_33c3ff"
            app:fab_icon="@drawable/ic_list"
            app:fab_size="mini"
            app:fab_title="条码明细"
            app:layout_constraintBottom_toBottomOf="@+id/rv_list"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_wms_scan_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/selector_confirm"
            android:gravity="center"
            android:minHeight="@dimen/dp_30"
            android:padding="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_6"
            android:text="确定录入"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            app:layout_constraintBottom_toBottomOf="@+id/tv_print_state"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_goneMarginEnd="@dimen/dp_15"
            app:layout_goneMarginStart="@dimen/dp_15" />
        <TextView
            android:id="@+id/tv_print_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>