<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/dp_40"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/tv_scan_title"
        android:layout_width="@dimen/dp_90"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="建议仓库/储位"
        android:textColor="#515151"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_scan_default"
        app:layout_constraintTop_toTopOf="parent" />

<!--    android:textSize="@dimen/sp_14"-->
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_scan_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        android:text=""
        android:focusableInTouchMode="true"
        android:nextFocusDown="@id/et_scan_input"
        android:paddingVertical="@dimen/dp_5"
        android:paddingStart="@dimen/dp_5"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_scan_lock"
        app:layout_constraintStart_toEndOf="@+id/tv_scan_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_scan_combox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/common_input_border"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:hint="请选择标打印模板"
        android:nextFocusDown="@id/et_scan_input"
        android:paddingStart="@dimen/dp_6"
        android:singleLine="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/et_scan_input"
        app:layout_constraintEnd_toEndOf="@+id/et_scan_input"
        app:layout_constraintStart_toStartOf="@id/et_scan_input"
        app:layout_constraintTop_toTopOf="@id/et_scan_input" />
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@null"
        android:paddingHorizontal="@dimen/dp_5"
        android:paddingVertical="@dimen/dp_5"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/et_scan_input"
        app:layout_constraintEnd_toEndOf="@+id/et_scan_input"
        app:layout_constraintStart_toStartOf="@id/et_scan_input"
        app:layout_constraintTop_toTopOf="@id/et_scan_input" />

    <ImageView
        android:id="@+id/tv_scan_default"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingStart="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_10"
        android:src="@drawable/ic_defalut"
        app:layout_constraintBottom_toBottomOf="@+id/tv_scan_lock"
        app:layout_constraintEnd_toStartOf="@+id/tv_scan_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_scan_lock" />

    <ImageView
        android:id="@+id/tv_scan_lock"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingStart="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_6"
        android:src="@drawable/ic_lock"
        android:text="锁定"
        app:layout_constraintBottom_toBottomOf="@+id/et_scan_input"
        app:layout_constraintEnd_toStartOf="@+id/iv_add"
        app:layout_constraintTop_toTopOf="@id/et_scan_input" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingStart="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_8"
        android:src="@drawable/round_add_24"
        android:text="锁定"
        app:layout_constraintBottom_toBottomOf="@+id/et_scan_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_scan_input" />

    <ImageView
        android:id="@+id/iv_base_info_query"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/dp_5"
        android:src="@drawable/ic_query"
        app:layout_constraintBottom_toBottomOf="@+id/et_scan_input"
        app:layout_constraintEnd_toEndOf="@+id/et_scan_input"
        app:layout_constraintTop_toTopOf="@+id/et_scan_input" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_0_5"
        android:background="#DCDCDC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/et_scan_input"
        app:layout_constraintStart_toStartOf="@+id/et_scan_input" />
</androidx.constraintlayout.widget.ConstraintLayout>