<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_show_title"
        android:layout_width="@dimen/dp_110"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:gravity="start|center_vertical"
        android:minWidth="@dimen/dp_110"
        android:paddingVertical="@dimen/dp_10"
        android:paddingStart="@dimen/dp_15"
        android:text="建议仓库/储位"
        android:textColor="@color/common_text_gray"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/et_show_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@null"
        android:gravity="start|center"
        android:paddingStart="@dimen/dp_5"
        android:singleLine="true"
        android:text="CK001"
        android:textColor="@color/common_text_gray2"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/tv_show_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_show_title"
        app:layout_constraintTop_toTopOf="@id/tv_show_title" />

    <ImageView
        android:id="@+id/iv_base_info_query"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/dp_5"
        android:src="@drawable/ic_query"
        app:layout_constraintBottom_toBottomOf="@+id/et_show_input"
        app:layout_constraintEnd_toEndOf="@+id/et_show_input"
        app:layout_constraintTop_toTopOf="@+id/et_show_input" />

    <TextView
        android:id="@+id/tv_show_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/dp_15"
        android:gravity="center_vertical|start"
        android:paddingStart="@dimen/dp_5"
        android:text="CK001"
        android:textColor="@color/common_text_gray2"
        app:layout_constraintBottom_toBottomOf="@+id/et_show_input"
        app:layout_constraintEnd_toEndOf="@+id/et_show_input"
        app:layout_constraintStart_toStartOf="@+id/et_show_input"
        app:layout_constraintTop_toTopOf="@+id/et_show_input" />

    <View
        android:id="@+id/view_edit_diver"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:background="#DCDCDC"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>