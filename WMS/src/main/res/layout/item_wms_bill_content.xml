<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cd_bill_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_15"
    android:layout_marginVertical="@dimen/dp_4"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_weight="9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bill_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_8"
                android:text="单据编号：CGDD000029"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_diver"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:background="@color/gray" />
            <unionware.base.ui.NoTouchRecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_10" />

        </LinearLayout>
        <CheckBox
            android:id="@+id/cb_select"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content_index"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_65"
        android:layout_gravity="bottom|end"
        android:background="@mipmap/ic_common_blue_tag"
        android:gravity="bottom|end"
        android:paddingBottom="@dimen/dp_10"
        android:text="1"
        android:paddingEnd="@dimen/dp_15"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:visibility="gone" />
</androidx.cardview.widget.CardView>