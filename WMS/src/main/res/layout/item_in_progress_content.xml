<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/view_progree_diver"
        android:layout_width="@dimen/dp_4"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/dp_6"
        android:layout_marginStart="@dimen/dp_8"
        android:background="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/tv_progress_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_progress_content" />

    <TextView
        android:id="@+id/tv_progress_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_18"
        android:minHeight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_2"
        android:text="MBR202368112313"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_progree_diver"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_progress_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023年6月8日 11:12:49"
        android:textColor="@color/gray"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@+id/tv_progress_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_progress_content" />

    <TextView
        android:id="@+id/tv_progress_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:text="箱容量：65"
        android:textColor="@color/gray"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@+id/tv_progress_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_progress_time" />


    <TextView
        android:id="@+id/tv_progress_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已装件数：10"
        android:textColor="@color/gray"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="@+id/tv_progress_content"
        app:layout_constraintTop_toTopOf="@+id/tv_progress_capacity" />




</androidx.constraintlayout.widget.ConstraintLayout>