<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="unionware.base.model.bean.barcode.BarCodeBean" />
    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_4"
        android:layout_marginVertical="@dimen/dp_4"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/acBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_5"
                android:text="@{`条码:`+item.code}"
                android:textSize="@dimen/title_size"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tbDelete"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <unionware.base.ui.TriangleButton
                android:id="@+id/tbDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="right|top"
                android:minWidth="@dimen/dp_50"
                android:minHeight="@dimen/dp_50"
                android:padding="@dimen/dp_5"
                android:text="删除"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:id="@+id/viewDiver"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:background="@color/gray"
                app:layout_constraintEnd_toEndOf="@+id/acBtn"
                app:layout_constraintStart_toStartOf="@id/acBtn"
                app:layout_constraintTop_toBottomOf="@+id/acBtn" />

            <include
                android:id="@+id/clFeature"
                layout="@layout/layout_bar_code_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/acBtn"
                app:layout_constraintStart_toStartOf="@id/acBtn"
                app:layout_constraintTop_toTopOf="@+id/viewDiver"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>