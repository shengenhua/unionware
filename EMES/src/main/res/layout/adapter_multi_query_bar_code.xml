<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="unionware.base.model.bean.barcode.MultiBarCodeBean" />
    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_4"
        android:layout_marginVertical="@dimen/dp_4"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/acBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_6"
                android:textStyle="bold"
                android:text="@{`条码：`+item.code}"
                android:textSize="@dimen/title_size"
                app:layout_constraintEnd_toStartOf="@+id/tbDelete"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/viewDiver"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:background="@color/gray"
                app:layout_constraintEnd_toEndOf="@+id/acBtn"
                app:layout_constraintStart_toStartOf="@id/acBtn"
                app:layout_constraintTop_toBottomOf="@+id/acBtn" />

            <include
                android:id="@+id/clFeature"
                layout="@layout/layout_bar_code_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/acBtn"
                app:layout_constraintTop_toBottomOf="@+id/viewDiver"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clMultiList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/clFeature"
                app:layout_constraintStart_toStartOf="@id/clFeature"
                app:layout_constraintTop_toBottomOf="@+id/clFeature">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clQuery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_7"
                    android:paddingHorizontal="@dimen/dp_5"
                    android:paddingVertical="@dimen/dp_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvProcessTitle"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="气体"
                        android:textColor="#515151"
                        android:textSize="@dimen/item_title_size"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/view1"
                        app:layout_constraintHorizontal_weight="0.2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="#DCDCDC"
                        android:paddingVertical="@dimen/dp_2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tvQuery"
                        app:layout_constraintStart_toEndOf="@+id/tvProcessTitle"
                        app:layout_constraintTop_toTopOf="parent" />

<!--                    app:drawableEndCompat="@drawable/ic_query"-->
                    <TextView
                        android:id="@+id/tvQuery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:paddingVertical="@dimen/dp_3"
                        android:text="@{item.gasName}"
                        android:textSize="@dimen/item_value_size"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="0.1"
                        app:layout_constraintStart_toEndOf="@+id/view1"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMulti"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:gravity="center"
                    app:drawableEndCompat="@drawable/ic_query"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clQuery" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <unionware.base.ui.TriangleButton
                android:id="@+id/tbDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="right|top"
                android:minWidth="@dimen/dp_50"
                android:minHeight="@dimen/dp_50"
                android:padding="@dimen/dp_5"
                android:text="删除"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>