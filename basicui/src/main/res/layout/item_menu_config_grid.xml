<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_menu_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_menu_icon_bg"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_25"
        app:cardCornerRadius="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/iv_menu_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_common" />

        <ImageView
            android:id="@+id/iv_menu_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_2"
            android:layout_margin="@dimen/dp_5"
            app:layout_constraintBottom_toBottomOf="@+id/cv_menu_icon_bg"
            app:layout_constraintEnd_toEndOf="@+id/cv_menu_icon_bg"
            app:layout_constraintStart_toStartOf="@+id/cv_menu_icon_bg"
            app:layout_constraintTop_toTopOf="@+id/cv_menu_icon_bg" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_menu_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:gravity="center"
        android:text="普通出库"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_menu_icon_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>