<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_in_progress_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/bg_search"
        android:hint="请输入查询条件"
        android:imeOptions="actionSearch"
        android:paddingVertical="@dimen/dp_15"
        android:paddingStart="@dimen/dp_35"
        android:privateImeOptions="actionSearch"
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/color_666"
        android:textColorHint="#7C7C7C"
        android:textSize="@dimen/sp_16"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_common_query"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:src="@drawable/ic_query"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/et_in_progress_search"
        app:layout_constraintStart_toStartOf="@+id/et_in_progress_search"
        app:layout_constraintTop_toTopOf="@id/et_in_progress_search" />
</androidx.constraintlayout.widget.ConstraintLayout>